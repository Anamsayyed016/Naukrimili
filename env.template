# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/jobportal"
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# Redis Configuration (Optional - for production performance)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_ENABLED="true"

# Database Performance Settings
DB_ENABLE_QUERY_MONITORING="true"
DB_SLOW_QUERY_THRESHOLD="100"
DB_VERY_SLOW_QUERY_THRESHOLD="500"
DB_ENABLE_CONNECTION_POOLING="true"
DB_MAX_POOL_SIZE="10"
DB_MIN_POOL_SIZE="2"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth (Required for Gmail Authentication)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# External Job APIs (REAL KEYS PROVIDED - UPDATE THESE)
ADZUNA_APP_ID="your-adzuna-app-id"
ADZUNA_APP_KEY="your-adzuna-app-key"
RAPIDAPI_KEY="your-rapidapi-key"
RAPIDAPI_HOST="jsearch.p.rapidapi.com"

# Google Jobs API (REAL KEYS PROVIDED - UPDATE THESE)
GOOGLE_JOBS_API_KEY="your-google-jobs-api-key"
GOOGLE_GEOLOCATION_API_KEY="your-google-geolocation-api-key"

# AI Services (REAL KEY PROVIDED - UPDATE THIS)
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Domain Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_DOMAIN="localhost"

# For Production Domain (replace with your actual domain)
# NEXT_PUBLIC_BASE_URL="https://yourdomain.com"
# NEXT_PUBLIC_DOMAIN="yourdomain.com"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000
API_CACHE_TTL=300

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"
CSRF_SECRET="your-csrf-secret"

# Feature Flags
NEXT_PUBLIC_MOCK_DATA=false
NEXT_PUBLIC_DISABLE_AUTH=false
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Development Settings
NODE_ENV="development"
DEBUG=true
LOG_LEVEL="info"
