generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  password      String?
  role          Role         @default(USER)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  fraudReports  FraudReport[] @relation("ReportedUser")
  
  @@map("users")
}

model FraudReport {
  id          String      @id @default(cuid())
  userId      String
  reason      String
  reportedBy  String
  evidence    String?
  status      ReportStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User        @relation("ReportedUser", fields: [userId], references: [id])

  @@map("fraud_reports")
}

enum Role {
  USER
  ADMIN
  EMPLOYER
}

enum ReportStatus {
  PENDING
  INVESTIGATING
  RESOLVED
  DISMISSED
}
