# PRODUCTION ENVIRONMENT - REAL DATA
NODE_ENV=production
NEXT_PUBLIC_MOCK_DATA=false

# NextAuth
NEXTAUTH_SECRET=your-super-secure-production-secret-key-here
NEXTAUTH_URL=https://your-app-name.vercel.app

# MongoDB Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jobportal
DATABASE_NAME=jobportal

# OpenAI API (REQUIRED for real AI)
OPENAI_API_KEY=sk-your-real-openai-api-key-here

# Job APIs
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_API_KEY=your-adzuna-api-key
REED_API_KEY=your-reed-api-key
INDEED_API_KEY=your-indeed-api-key

# AWS S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-jobportal-bucket

# Email Service (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
MAILGUN_API_KEY=your-mailgun-api-key

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Additional APIs
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret