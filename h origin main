[32m+[m
[32m+[m[32m      if (data.success) {[m
[32m+[m[32m        // Clear registration data from session storage[m
[32m+[m[32m        sessionStorage.removeItem('registrationData');[m
[32m+[m[41m        [m
[32m+[m[32m        // Redirect to role selection for final setup[m
[32m+[m[32m        router.push('/auth/role-selection');[m
