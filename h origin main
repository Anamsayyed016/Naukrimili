[32m+[m[32m    console.log('OTP verification successful:', data);[m
[32m+[m[41m    [m
[32m+[m[32m    if (purpose === 'registration') {[m
[32m+[m[32m      // Get registration data from session storage[m
[32m+[m[32m      const registrationData = sessionStorage.getItem('registrationData');[m
