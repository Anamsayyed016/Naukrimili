[32m+[m[32m          email: formData.email,[m
[32m+[m[32m          password: formData.password,[m
[32m+[m[32m          role: formData.role === 'candidate' ? 'jobseeker' : 'employer',[m
[32m+[m[32m          authMethod: 'email'[m
[32m+[m[32m        }),[m
[32m+[m[32m      });[m
