# NaukriMili Job Portal - Hostinger Production Environment
# Copy this file to .env.local on your Hostinger server

# App Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secret-jwt-key-generate-with-openssl-rand-base64-32

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/naukrimili?retryWrites=true&w=majority

# Authentication Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Job API Services (Optional but recommended)
SERPAPI_KEY=your-serpapi-key-for-google-jobs
ADZUNA_APP_ID=your-adzuna-application-id
ADZUNA_API_KEY=your-adzuna-api-key
REED_API_KEY=your-reed-api-key

# AI Features (Optional)
OPENAI_API_KEY=your-openai-api-key

# AWS S3 for File Uploads (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Hostinger Specific
PORT=3000
HOST=0.0.0.0

# Debug Mode (set to false in production)
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
